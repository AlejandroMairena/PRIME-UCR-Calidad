@using PRIME_UCR.Components.Controls
@using PRIME_UCR.Domain.Models.UserAdministration
@using PRIME_UCR.Components.Incidents.IncidentDetails.Tabs
@using Microsoft.EntityFrameworkCore

<Loading IsLoading="_isLoading">
    <EditForm EditContext="_context" OnValidSubmit="Submit">
        <FluentValidationValidator />
        <div class="row">
            <div class="col-xl-6 col-lg-8">
        <DropDownMenu T="CentroMedico" Data="_medicalCenters"
                      Label="Centro médico"
                      DefaultText="Seleccione un centro médico"
                      TextProperty="Nombre"
                      Value="@Value.MedicalCenter"
                      ValueExpression="() => Value.MedicalCenter"
                      ValueChanged="@((CentroMedico mc) => OnChangeMedicalCenter(mc))"/>
        <DropDownMenu Data="_doctors" T="Médico"
                      DefaultText="Seleccione un/una médico/médica"
                      Label="@DoctorForLabel"
                      TextExpression="@((Médico m) => $"{m.Nombre} {m.PrimerApellido} {m.SegundoApellido}")"
                      @bind-Value="Value.Doctor"/>
            </div>
        </div>
        @if (IsOrigin)
        {
            <div class="row">
                <div class="col-md-4">
                    <IntegerInput Label="Número de cama" @bind-Value="Value.BedNumber" Min="0"/>
                </div>
            </div>
        }
        <div class="mt-2">
            @if (!_saveButtonEnabled)
            {
                <button disabled type="submit" class="btn btn-primary">Guardar</button>
                <button disabled class="btn btn-outline-secondary">Descartar</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button role="button" @onclick:preventDefault @onclick="@Discard" class="btn btn-outline-secondary">Descartar</button>
            }
        </div>
    </EditForm>
</Loading>
