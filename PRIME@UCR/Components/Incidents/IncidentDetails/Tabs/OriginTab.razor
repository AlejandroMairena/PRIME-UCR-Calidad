@using PRIME_UCR.Components.Controls
@using PRIME_UCR.Components.Incidents.LocationPickers

<h3> Información sobre el origen </h3>
<br />
<DropDownMenu Values="@_dropdownValuesOrigin" Label="Tipo de origen" OnChange="@((OriginType tab) => OnChangeOriginType(tab))" />

@if (_selectedOriginType == OriginType.Household)
{
    <HouseholdPicker OnChange="@OnChangeOrigin" />
}
else if (_selectedOriginType == OriginType.International)
{
    <InternationalPicker OnChange="@OnChangeOrigin" />
}
else
{ 
    <MedicalCenterPicker OnChange="@OnChangeOrigin"/>
}
<div class="text-center">
    <button type="reset" class="btn btn-outline-danger">Cancelar</button>
    <button type="submit" class="btn btn-success">Guardar</button>
</div>
