<ul class="list-group">
    <ListItem Title="Id" Text="@Incident.Id"/>
    <ListItem Title="Estado" Text="@Incident.Estado"/>
    @if (Incident.Modalidad != null)
    {
        <ListItem Title="Estado" Text="@Incident.Modalidad.Tipo"/>
    }
    <ListItem Title="Fecha estimada de traslado" Text="@Incident.FechaHoraEstimada.ToShortDateString()"/>
    <ListItem Title="Hora estimada de traslado" Text="@Incident.FechaHoraEstimada.ToShortTimeString()"/>
    @* <ListItem Title="Registrado por" Text="" /> *@
    <ListItem Title="Fecha de registro" Text="@Incident.FechaHoraRegistro.ToShortDateString()"/>
    <ListItem Title="Hora de registro" Text="@Incident.FechaHoraRegistro.ToShortTimeString()"/>
</ul>

@code {
    [Parameter]
    public Incidente Incident { get; set; }
}