@inherits CheckListInstanceAviableBase
@attribute [Authorize]
<link href="css/Checklist.css" rel="stylesheet" />

@*Show in  all checklist already creates*@
@*<div class="col-lg-3 mb-4">*@
@* Contains the list of existing checklists *@
<div class="container">
    @* Header with button to create a new checklist *@
    <h6>Listas de chequeo:</h6>
    <div>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                @if (lists != null && lists.Count() > 0)
                {
                    @foreach (var tempList in lists)
                    {
                    <li class="mt-2">
                        <NavLink href='@string.Format("checklist/Incident/{0}", @tempList.Id)' class="nav-link" id="a_LC4">
                            •  @tempList.Nombre
                        </NavLink>
                    </li>
                }
                }
                </li>
            </ul>
        </div>
</div>
@*</div>*@