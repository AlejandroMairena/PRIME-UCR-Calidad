@inherits LayoutComponentBase

<div class="sidebar navbar-light text-white background-image:blue">
    @if (authenticated)
    {
        <NavMenu />
    } else
    {
        <LoginForm />
    }
</div>

<div class="main">       

    @if (authenticated)
    {
        <div class="content px-4 float-none">
            @Body
        </div>
    }
    else
    {
        <p>
            Ingrese con su usuario.
        </p>
    }
    
</div> 



@code{
    private bool authenticated;

    protected override void OnInitialized()
    {
        authenticated = true;
        base.OnInitialized();
    }

    public void changeAuthe()
    {
        authenticated = !authenticated;
    }
}