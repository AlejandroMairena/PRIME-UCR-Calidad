@inherits LayoutComponentBase


<div class="sidebar navbar-light bg-primary text-white background-image:blue">
    @if (authenticated)
    {
        <NavMenu />
    } else
    {
        <LoginForm />
    }
</div>

<div class="main">
    <NavBarComponent />
       
    <a @onclick="changeAuthe">Cambiar autenticación para hacer prueba</a>

    @if (authenticated)
    {
        <div class="content px-4 float-none">
            @Body
        </div>
    }
    else
    {
        <p>
            Ingrese con su usuario.
        </p>
    }
    <FooterComponent />
</div> 


@code{
    private bool authenticated;

    protected override void OnInitialized()
    {
        authenticated = true;
        base.OnInitialized();
    }

    private void changeAuthe()
    {
        authenticated = !authenticated;
    }
}