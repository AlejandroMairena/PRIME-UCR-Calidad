@typeparam T
@inherits InputBase<T>

<div class="form-group">
    <label>@Label</label>
    <InputSelect class="@($"custom-select {CssClass}")"
                 Value="SelectedValue"
                 ValueExpression="@(() => SelectedValue)"
                 ValueChanged="@((string value) => OnChangeEvent(value))">
        @if (!String.IsNullOrEmpty(DefaultText))
        {
            <option value="@(-1)" disabled selected>@DefaultText</option>
        }
        @for (int i = 0; i < Data.Count; ++i)
        {
            @if (i == _index)
            {
                <option selected value="@i">@GetText(Data[i])</option>
            }
            else
            {
                <option value="@i">@GetText(Data[i])</option>
            }
        }
    </InputSelect>
</div>