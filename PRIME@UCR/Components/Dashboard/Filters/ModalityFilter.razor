@using PRIME_UCR.Components.Controls

<Loading IsLoading="_isLoading">
    <EditForm Model="Value">
        <DropDownMenu Label="Modalidad"
                      Data="_modes"
                      Value="Value.ModalityFilter"
                      ValueChanged="@((Modalidad m) => OnModalityChange(m))"
                      ValueExpression="() => Value.ModalityFilter"
                      TextProperty="Tipo"
                      DefaultText="Sin filtro"
                      UseValidation="false"
                      Required="false" />
    </EditForm>
</Loading>