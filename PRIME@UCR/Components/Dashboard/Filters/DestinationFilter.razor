@using PRIME_UCR.Components.Controls
<Loading IsLoading="_isLoading">
    <EditForm Model="Value">
        <DropDownMenu Data="@_medicalCenters"
                        Label="Ubicación destino"
                        TextProperty="Nombre"
                        DefaultText="Sin filtro"
                        Value="Value.MedicalCenterDestination.MedicalCenter"
                        ValueExpression="() => Value.MedicalCenterDestination.MedicalCenter"
                        ValueChanged="@((CentroMedico mc) => OnChangeMedicalCenter(mc))" 
                        UseValidation="false"
                        Required="false"/>
    </EditForm>
</Loading>