@using PRIME_UCR.Components.Controls
@*Falta alguna forma de restablecer la fecha*@
<Loading IsLoading="Value == null">
    <EditForm Model="Value">
        <DatePicker @bind-Value="Value.InitialDateFilter"
                    Min="@DateTime.Today.AddYears(-20)"
                    Max="Value.FinalDateFilter == null? DateTime.Today : Value.FinalDateFilter"
                    Required="false"
                    Label="Fecha Inicial" />
        <DatePicker @bind-Value="Value.FinalDateFilter"
                    Min="Value.InitialDateFilter == null? DateTime.Today.AddYears(-20) : Value.InitialDateFilter "
                    Max="@DateTime.Today"
                    Required="false"
                    Label="Fecha Final" />
    </EditForm>
</Loading>