@using PRIME_UCR.Components.Controls

<Loading IsLoading="Value == null">
    <EditForm Model="Value">
        <DatePicker Value="Value.FinalDateFilter"
                    ValueChanged="@((DateTime? d) => OnPickedDate(d))"
                    ValueExpression="() => Value.FinalDateFilter"
                    Min="Value.InitialDateFilter == null? DateTime.Today.AddYears(-20) : Value.InitialDateFilter "
                    Max="@DateTime.Today"
                    Required="false"
                    Label="Fecha Final" />
    </EditForm>
</Loading>