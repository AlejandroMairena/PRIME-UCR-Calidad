@using PRIME_UCR.Components.Controls

<Loading IsLoading="_isLoading">
    <EditForm Model="Value">
        <DropDownMenu Data="_stateTypes"
                      Label="Estado"
                      TextProperty="Nombre"
                      Value="Value.StateFilter"
                      ValueChanged="@((Estado e) => OnStateChange(e))"
                      ValueExpression="() => Value.StateFilter"
                      DefaultText="Sin filtro"
                      UseValidation="false"
                      Required="false" />
    </EditForm>
</Loading>