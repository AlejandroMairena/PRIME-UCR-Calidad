@using PRIME_UCR.Components.Controls
<Loading IsLoading="Value == null">
    <EditForm Model="Value">
        <DatePicker Value="Value.InitialDateFilter"
                    ValueChanged="@((DateTime? d) => OnPickedDate(d))"
                    ValueExpression="() => Value.InitialDateFilter"
                    Min="@DateTime.Today.AddYears(-20)"
                    Max="Value.FinalDateFilter == null? DateTime.Today : Value.FinalDateFilter"
                    Required="false"
                    Label="Fecha Inicial" />
    </EditForm>
</Loading>