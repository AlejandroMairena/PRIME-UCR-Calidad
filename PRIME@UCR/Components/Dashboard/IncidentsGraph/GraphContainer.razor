<div class="card">
    <div class="card-header">
        <div class="row">
            <h4>@Title</h4>
            @if (!ZoomActive)
            {
                <span class="oi oi-zoom-in text-right mr-1" @onclick="ShowModal"></span>
            }

        </div>
    </div>
    <div class="card-body">
        <div class="text-center"><strong>Cantidad de Incidentes:@EventQuantity</strong> </div>
        @ChildContent
    </div>
</div>
