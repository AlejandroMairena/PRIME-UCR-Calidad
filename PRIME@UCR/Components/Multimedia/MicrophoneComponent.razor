@inject IJSRuntime JS

<div class="rt-container">

    <div class="card" style="padding: 20px">
        <h2>Grabadora</h2>
        <hr />

        <MultimediaTitleComponent OnTitleChanged="OnTitleChanged" Title="audio"></MultimediaTitleComponent>

        @* Timer *@
        <div class="row" style="width: 120px; margin: auto;">
            <p @ref="timer" style="font-size: 24px">00:00:00</p>
        </div>

        @* Start/Stop Recording Buttons *@
        <div class="row">
            <button class="btn btn-primary rt-button" @ref="recordButton">Grabar</button>
            
            <button class="btn btn-danger rt-button hidden" @ref="stopButton">Detener</button>
        </div>

        <div class="row" style="margin-top: 20px">
            @* Recorded Audio *@
            <audio style="width:280px; margin: auto" @ref="audio"></audio>
        </div>

        <div class="row" style="margin-top: 20px">
            <div class="col">
                @* Exit Button *@
                <div class="row">
                    <div class="col">
                        <button class="btn btn-danger rt-button" @onclick="OnClose">Salir</button>
                    </div>
                </div>
            </div>

            <div class="col">
                @* Dowload Link *@
                <a @ref="downloadLink">Descargar</a>
            </div>

        </div>

    </div>
</div>