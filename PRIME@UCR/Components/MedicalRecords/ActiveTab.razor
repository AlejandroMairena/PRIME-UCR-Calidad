@using PRIME_UCR.Components.MedicalRecords.Tabs

<div class="container">
    @if (Active == DetailsTab.Info)
    {
        <GeneralInfoTab record="@Expediente" />
    }
    else if (Active == DetailsTab.Appointments)
    {
        <Appointments medical_record="@MedicalRecord" />
    }
    else if (Active == DetailsTab.MedicalBackgroundTab)
    {
        <MedicalBackgroundTab Antecedentes="@Antecedentes" Alergias="@Alergias" ListaAntecedentes="@ListaAntecedentes"/>
    }else
    {
    <h4 class="text-danger">Not found</h4>
    }
</div>
