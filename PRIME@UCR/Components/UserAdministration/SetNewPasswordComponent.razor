
@if(resultOfRecovery == 'T')
{
    <StatusMessage Message="Su contraseña ha sido cambiada correctamente"
                   Class="success" />
} else
{
    <StatusMessage Message="Recuerde que la contraseña debe al menos simbolos, números, mayúsculas, minúsculas y al menos 8 caracteres"
                   Class="warning" />
}

@if(resultOfRecovery == 'F')
{
    <StatusMessage Message="Se ha presentado un error cambiando la contraseña, vuelva a solicitar el cambio de contraseña"
                   Class="danger" />
}


<div class="bg-white rounded p-1">
    <EditForm Model="@RecoveryPasswordInfo" OnValidSubmit="ChangePassword">
        <FluentValidationValidator />
        <div class="col-3">
            <TextBox Label="Nueva contraseña:"
                     @bind-Value="RecoveryPasswordInfo.PasswordModel.Password"
                     Required="true"
                     Type="password" />
        </div>

        <div class="col-3">
            <TextBox Label="Confirmar nueva contraseña:"
                     @bind-Value="RecoveryPasswordInfo.PasswordModel.ConfirmedPassword"
                     Required="true"
                     Type="password" />
        </div>

        <div class="m-3">
            @if (_isBusy)
            {
                <button class="btn btn-primary-noHover width:13em mt-2" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" style="background-color:#095290" role="status" aria-hidden="true"></span>
                    Validando información
                </button>
            }
            else
            {
                <button type="submit" class="btn btn-primary width:13em mt-2">Cambiar contraseña</button>
            }
        </div>
    </EditForm>
</div>