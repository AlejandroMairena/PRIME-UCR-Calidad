@inject AuthenticationStateProvider AuthenticationStateProvider
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage

<div class="container mt-5 text-white">
    <EditForm Model="@usuario" OnValidSubmit="@ValidateUser">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group">
            <label for="inputEmail">Correo Electrónico:</label>
            <input @bind="usuario.Email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="inputPassword">Contraseña</label>
            <input @bind="usuario.Contraseña" type="password" class="form-control" id="inputPassword">
        </div>
        <a href="changePassword" class="text-white">Cambiar contraseña</a>
        <br />
        <button type="submit" class="btn btn-light mt-2">Ingresar</button>
    </EditForm>
    <div class="text-left">
        <small id="emailHelp" class="text-white">No compartiremos su correo electrónico con nadie.</small>
    </div>
</div>
