@using PRIME_UCR.Components.Controls
@using  PRIME_UCR.Domain.Models.UserAdministration

<Loading IsLoading="ListProfiles == null">
        <EditForm Model="Value" >
            <DropDownMenu Label="Seleccione el perfil que desea consultar" 
                          Data="ListProfiles" 
                          Value="selectedProfile" 
                          ValueChanged="((Perfil p)=> updateOtherTables(p))"
                          ValueExpression="() => selectedProfile"
                          TextProperty="NombrePerfil"
                          DefaultText="Seleccione el perfil a modificar" 
                          UseValidation="false" />
        </EditForm>
</Loading>
