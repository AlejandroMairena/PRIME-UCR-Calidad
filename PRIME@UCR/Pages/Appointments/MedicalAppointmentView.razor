@page "/medical-appointment/{Id}"
@using PRIME_UCR.Components.MedicalAppointments
@inject IAppointmentService appointment_service

    <h1>Detalles de la cita</h1>
    <hr />


    @if (exists)
    {
        <Loading IsLoading="appointment == null">
            @if (Summary != null)
            {
                <SummaryMessage Content="Summary.Content" Values="Summary.Values" Class="info" />
            }
        <div class="row">
            <div class="col-lg-2 mb-4">
                <TabMenu Tabs="_tabs" DefaultTab="DefaultTab" IsVertical="true" @bind-Value="_activeTab" />
            </div>
            @if (_activeTab != MADetailsTab.Recetas)
            {
                <div class="col">
                    <MAActiveTab Active="@_activeTab" med_appointment_id="@id" id="@id" appointment="@appointment"></MAActiveTab>
                </div>
            }
            else
            {
                @if (_activeTab != MADetailsTab.Metricas)
                {
                    <MAActiveTab Active="@_activeTab" med_appointment_id="@id" id="@id" appointment="@appointment"></MAActiveTab>
                }
                else {
                    @if (appoint != null) {
                        <MAActiveTab Active="@_activeTab" med_appointment_id="@id" id="@id" appointment_id="appoint.Id" appointment="@appointment"></MAActiveTab>
                    }

                }

            }
        </div>
        </Loading>
    }
    else
    {
        <h4 class="text-danger">No se encontró el expediente solicitado.</h4>
    }
    <br />