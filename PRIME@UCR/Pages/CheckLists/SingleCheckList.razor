@using Microsoft.AspNetCore.Components;
@using PRIME_UCR.Application.Services;
@using PRIME_UCR.Domain.Models;
@using System.Collections.Generic;
@using System.Threading.Tasks;
@using PRIME_UCR.Application.Services.CheckLists;
@using PRIME_UCR.Components.CheckLists;
@using Microsoft.AspNetCore.Components.Forms;

@page "/checklist/{id:int}"
@inherits SingleCheckListBase
@layout CheckListLayout

<h3 align="center"> Listas de Chequeo</h3>

@if (list == null)
{
    <p><em>Cargando lista de chequeo.</em></p>
}
else
{
    <p>
        <b>Nombre: </b> @list.Nombre
        <span style="color:dimgray">&emsp;&emsp;Tipo: </span> @list.Tipo
        <span style="color:dimgray">&emsp;&emsp;Id: </span> @list.Id
    </p>
    <p><span style="color:dimgray">Descripcion: </span> @list.Descripcion</p>
    
}
