@page "/checklist"
@inherits CheckListPageBase
@layout CheckListLayout
@* @attribute [Authorize(Roles = "coordinador tecnico medico")] *@
@* @attribute [Authorize(Policy = "check-list")] *@

<h3 align="center"> Listas de Chequeo </h3>
<div>
    @if (lists == null)
    {
     <p><em class="nav-link">No se han creado ninguna lista, presione el boton Crear Lista de Chequeo para crear una.</em></p>
    } else
    {
        if (lists.Count() == 0)
        {
            <p><em class="nav-link">No se han creado ninguna lista, presione el boton Crear Lista de Chequeo para crear una.</em></p>
        }
    }
</div>

<Modal @bind-Open="IsModalOpened" Close="OnClose">
    <EditForm EditContext="@editContext" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <h4 align="center"> Crear lista de chequeo </h4>
        <p>
            <label for="name">Nombre plantilla <span style=" color:red">*</span></label>
            <InputText id="name" @bind-Value="checkList.Nombre" />
            <ValidationMessage For="@(() => checkList.Nombre)" />
        </p>

        <p>
            <label for="description">Descripción</label>
            <InputTextArea id="description" @bind-Value="checkList.Descripcion" />
        </p>

        <p>
            <label for="type">Tipo <span style=" color:red">*</span></label>
            <InputSelect id="type" @bind-Value="checkList.Tipo">
                <option value="" selected="selected" disabled>Seleccione el tipo</option>
                <option value="Colocación equipo">Colocación equipo</option>
                <option value="Retiro equipo">Retiro equipo</option>
                <option value="Paciente en origen">Paciente en origen</option>
                <option value="Paciente en destino">Paciente en destino</option>
                <option value="Paciente en traslado">Paciente en traslado</option>
            </InputSelect>
            <ValidationMessage For="@(() => checkList.Tipo)" />
        </p>

        <p>
            <label for="order">Orden</label>
            <InputNumber id="order" @bind-Value="checkList.Orden" />
        </p>

        <p style="color:red">* campo requerido</p>
        <menu>
            <button type="submit" class="btn btn-primary" disabled="@formInvalid">Guardar</button>
            <button type="button" class="btn btn-secondary" @onclick="e => IsModalOpened = false">Cancelar</button>
        </menu>

    </EditForm>
</Modal>