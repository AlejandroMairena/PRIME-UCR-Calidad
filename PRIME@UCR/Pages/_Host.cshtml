@using PRIME_UCR.Components
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="TODO: Poner descripcion relevante del sitio" />
    <title>PRIME@UCR</title>
    <base href="~/" />
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/default.css">
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="_content/MatBlazor/dist/matBlazor.css" rel="stylesheet" /> <!-- Diosvier href for MatBlazor-->
    <link href="css/site.css" rel="stylesheet" />
