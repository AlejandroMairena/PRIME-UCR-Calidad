    <script src="https://cdn.amcharts.com/lib/4/maps.js"></script>
    <script src="https://cdn.amcharts.com/lib/4/geodata/data/countries2.js"></script>

    <script src="~/js/AmChart.js"></script>
    <script src="~/js/MapGraph.js"></script>
    <script src="~/js/IncidentsVsTimeChartComponentJS.js"></script>
    <script src="~/js/IncidentsVsOriginLocationComponentJS.js"></script>
