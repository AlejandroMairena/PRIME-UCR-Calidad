@page "/user_administration/profiles"
@using PRIME_UCR.Components.UserAdministration

@attribute [Authorize]
<link href="css/Profiles.css" rel="stylesheet" />


<br />
<h3> Modificación de Permisos y Perfiles </h3>
<br />

<StatusMessage Message="@profile.StatusMessage" Class="success" />
<h5>Perfiles</h5>
<ProfilesComponent @bind-Value="profile" />


@if (!String.IsNullOrEmpty(profile.ProfileName))
{
    <Loading IsLoading="profile.ProfileName == null">
        <div class="wrapper">
            <div style="background-color: white;padding-left: 10px;padding-right: 10px;">
                <br />
                <h5>Usuarios</h5>
                <UsersComponent @bind-Value="profile" />
            </div>
            <div style="background-color:white;padding-left: 10px;padding-right: 10px;">
                <br />
                <h5>Permisos</h5>
                <PermissionsComponent @bind-Value="profile" />
            </div>

        </div>
    </Loading>

}