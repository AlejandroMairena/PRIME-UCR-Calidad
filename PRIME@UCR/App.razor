@using PRIME_UCR.Application.Services.CheckLists
<CascadingAuthenticationState>
    <CascadingValue Value="@Lists" Name="lists">
    <CascadingValue Value="@Changelists" Name="Changelists" TValue="Action<IEnumerable<CheckList>>">
        <Router AppAssembly="@typeof(Program).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" >
                    <NotAuthorized>
                        <AuthenticationStateMessage />
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView>
                    <HeaderComponent/>
                    <h3>
                        Error: La página no existe
                    </h3>
                    <div style="position: absolute; bottom: 0; width: 100%;">
                        <FooterComponent/>
                    </div>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingValue>
    </CascadingValue>
</CascadingAuthenticationState>

@code {

    public IEnumerable<CheckList> Lists { get; set; }

    private void Changelists(IEnumerable<CheckList> newlists)
    {
        Lists = newlists;
        StateHasChanged();
    }

}
